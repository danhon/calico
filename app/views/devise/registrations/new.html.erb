<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group row">
    <div class="col-xs-6">
      <%= f.label :first_name, 'First Name' %>
      <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
    </div>
    <div class="col-xs-6">
      <%= f.label :last_name, 'Last Name' %>
      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: 'form-control', placeholder: 'Phone #' %>
  </div>

  <div class="field form-group">
    <%= f.label :email, 'Email Address' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address' %>
  </div>

  <%= f.fields_for :addresses do |addresses_form| %>
    <div class="field form-group">
      <%= addresses_form.label :street_address, 'Street Address' %>
      <%= addresses_form.text_field :street_address, class: 'form-control', placeholder: 'Primary Mailing Address' %>
    </div>

    <div class="field form-group row">
      <div class="col-xs-6">
        <%= addresses_form.label :city %>
        <%= addresses_form.text_field :city, class: 'form-control', placeholder: 'City' %>
      </div>
      <div class="col-xs-6">
        <%= addresses_form.label :state %>
        <%= addresses_form.select :state, options_for_select(us_states), {}, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= addresses_form.label :zip_code, 'Zip Code' %>
      <%= addresses_form.number_field :zip_code, class: 'form-control', placeholder: 'Zip Code' %>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, 'Password Confirmation' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
  </div>

  <div class="actions">
    <%= f.submit "Upload Profile Picture", class: 'btn btn-lg btn-primary btn-block', disabled: true %>
    <%= f.submit "Save", class: 'btn btn-lg btn-primary btn-block btn-success' %>
  </div>
<% end %>

