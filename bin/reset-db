#!/bin/bash

ROOT="$(dirname "$0")/.."
set -e
set -x

USER=${PG_USER:-calico}
HOST=${PG_HOST:-localhost}
PORT=${PG_PORT:-5432}

cd "$ROOT"
dropdb -h "$HOST" -p "$PORT" -w -U "$USER" --if-exists ca_development
dropdb -h "$HOST" -p "$PORT" -w -U "$USER" --if-exists ca_test
RAILS_ENV=development bundle exec rake --trace db:create db:migrate db:seed
RAILS_ENV=test bundle exec rake --trace db:create db:migrate db:seed
